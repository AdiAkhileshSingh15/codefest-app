@keyframes blink {
  from {
    opacity 0
  }
  to {
    opacity 1
  }
}

@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}

@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: orange; }
}

@keyframes neon-text {
  from {
    text-shadow: 0 0 2.5px $white, 0 0 5px $white, 0 0 7.5px $white, 0 0 10px $vermilion, 0 0 12.5px $vermilion, 0 0 15px $vermilion, 0 0 25px $vermilion;
  }

  to {
    text-shadow: 0 0 1px $white, 0 0 2px $white, 0 0 3px $white, 0 0 4px $vermilion, 0 0 5px $vermilion, 0 0 6px $vermilion, 0 0 10px $vermilion;
  }
}

@keyframes neon-box {
  from {
    box-shadow: 0 0 15px $white, 0 0 17.5px $white, 0 0 10px $vermilion, 0 0 52.5px $vermilion, 0 0 55px $limeade, 0 0 70px $limeade, 0 0 90px $limeade;
  }

  to {
    box-shadow: 0 0 1px $white, 0 0 2px $white, 0 0 3px $white, 0 0 6px $white, 0 0 8px $vermilion, 0 0 12px $vermilion, 0 0 20px $limeade, 0 0 30px $limeade, 0 0 55px $limeade, 0 0 70px $limeade;
  }
}

@keyframes timeline-border-green {
  from {
    box-shadow: 0 0 0 2px alpha($vermilion, 0.5)
  }

  to {
    box-shadow: 0 0 0 5px alpha($vermilion, 0.5)
  }
}

@keyframes timeline-border-white {
  from {
    box-shadow: 0 0 0 2px alpha($white, 0.5)
  }

  to {
    box-shadow: 0 0 0 5px alpha($white, 0.5)
  }
}

@keyframes timeline-border-full {
  from {
    box-shadow: 0 0 0 10px alpha($vermilion, 0.7)
  }

  to {
    box-shadow: 0 0 0 20px alpha($vermilion, 0.7)
  }
}

@keyframes svg-transform {
  from,{
    fill: $vermilion;
    stroke-width: 1px;
    stroke: $vermilion;
  }

  to{
    fill: transparent;
    stroke: $vermilion;
    stroke-width: 5px;
  }
}


@keyframes LineFadeIn {
  0% {
    opacity: 0;
    d: path('M 0 300 Q 0 300 0 300 Q 0 300 0 300 C 0 300 0 300 0 300 Q 0 300 0 300 ');
    stroke: #ff0000;
  }

  50% {
    opacity: 1;
    d: path('M 0 300 Q 50 300 100 300 Q 250 300 350 300 C 350 300 500 300 650 300 Q 750 300 800 300');
    stroke: #ff6200;
  }

  100% {
    opacity: 1;
    d: path('M -2 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 802 400');
    stroke: $mystic;
  }
}

@keyframes ContentFadeIn {
  0% {
    transform: translateY(-1rem);
    opacity: 0;
  }

  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes ImageFadeIn {
  0% {
    transform: translate(-0.5rem, -0.5rem) scale(1.05);
    opacity: 0;
    filter: blur(2px);
  }

  50% {
    opacity: 1;
    filter: blur(2px);
  }

  100% {
    transform: translateY(0) scale(1);
    opacity: 1;
    filter: blur(0);
  }
}